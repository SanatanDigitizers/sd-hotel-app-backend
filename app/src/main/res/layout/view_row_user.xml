<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_image_icon"/>

<TextView
    android:layout_toRightOf="@+id/user_image_icon"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:text="Dhirendra Kumar"
    android:id="@+id/user_name_tv"
    android:textColor="@color/black"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"/>

    <TextView
        android:id="@+id/user_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/user_image_icon"
        android:layout_marginTop="57dp"
        android:text="dhirendra985dhiru@gmail.com"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/user_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/user_image_icon"
        android:layout_marginTop="96dp"
        android:text="8723925609"
        android:textColor="@color/black"
        android:textSize="20sp" />

  

</RelativeLayout>
